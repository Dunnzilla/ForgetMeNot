<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right"
    android:orientation="vertical" >

	<ImageView
	    android:id="@+id/about_logo"
	    android:layout_width="fill_parent"
	    android:layout_height="200dp"
	    android:layout_centerHorizontal="true"
	    android:contentDescription="@string/about_title"
	    android:scaleType="fitStart"
	    android:src="@drawable/logo" />

	<TextView android:text="@string/app_name"
		android:id="@+id/about_product_title"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/about_logo"
		android:textColor="#a0a0ff"
		android:textSize="25dip"
	 />
	<TextView android:text="@string/str_version"
		android:id="@+id/about_versionName"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_height="wrap_content"
		android:layout_below="@id/about_product_title"
	/>

</RelativeLayout>
