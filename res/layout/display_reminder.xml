	<!--  ======================================================================================== -->

	<View android:id="@+id/hr_bottom" android:layout_below="@id/disprem_btn_snooze"
		android:background="#7777cc" android:layout_width="fill_parent"
		android:layout_height="1dip" android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp" />
	
    <Button
    	android:id="@+id/disprem_btn_delete"
    	android:text="Delete"
    	
    	android:layout_below="@id/hr_bottom"
    	
	    android:layout_width="120dp" 
	    android:layout_height="wrap_content" 
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dp"
    	/>
    <Button
    	android:id="@+id/disprem_btn_edit"
    	android:text="Edit"    	
    	android:layout_toRightOf="@id/disprem_btn_delete"
    	android:layout_below="@id/hr_bottom"

	    android:layout_width="120dp" 
	    android:layout_height="wrap_content" 
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dp"
    	/>

