<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" 
android:layout_height="wrap_content"
>

<RelativeLayout 
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView
		android:id="@+id/about_logo"
		android:scaleType="fitStart"
		android:src="@drawable/logo" android:layout_centerHorizontal="true" android:layout_height="fill_parent" android:layout_width="fill_parent"/>


</RelativeLayout>

<RelativeLayout
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_gravity="center_vertical|center_horizontal">
		 
	<TextView android:text="@string/app_name"
		android:id="@+id/about_product_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:textColor="#a0a0ff"
		android:textSize="25dip"
	 />
	<TextView android:text="(Tablet)"
		android:id="@+id/about_forTablets"
		android:layout_below="@id/about_product_title"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_height="wrap_content"
		android:textColor="#a0a0ff"
		android:textSize="18dip"	
	/>
	<TextView android:text="@string/str_version"
		android:id="@+id/about_versionName"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_height="wrap_content"
		android:layout_below="@id/about_forTablets"
	/>

</RelativeLayout>
</FrameLayout>